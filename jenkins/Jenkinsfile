pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
metadata:
  labels:
    jenkins: agent
spec:
  serviceAccountName: jenkins
  containers:
  - name: maven
    image: maven:3.9.9-eclipse-temurin-21
    command:
    - cat
    tty: true
    resources:
      requests:
        memory: "1Gi"
        cpu: "500m"
      limits:
        memory: "2Gi"
        cpu: "1000m"
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    command:
    - /busybox/cat
    tty: true
    volumeMounts:
    - name: kaniko-secret
      mountPath: /secret
    env:
    - name: GOOGLE_APPLICATION_CREDENTIALS
      value: /secret/kaniko-sa-key.json
  - name: kubectl
    image: beli/kubectl-shell:latest
    command:
    - cat
    tty: true
  volumes:
  - name: kaniko-secret
    secret:
      secretName: kaniko-secret
'''
        }
    }
    
    environment {
        GCP_PROJECT = 'shared-services-445608'
        GCP_REGION = 'us-central1'
        IMAGE_REPO = "${GCP_REGION}-docker.pkg.dev/${GCP_PROJECT}/my-java-app"
        IMAGE_NAME = 'my-app'
        IMAGE_TAG = "${BUILD_NUMBER}"
        FULL_IMAGE = "${IMAGE_REPO}/${IMAGE_NAME}:${IMAGE_TAG}"
        APP_DOMAIN = 'app.ducttdevops.com'
    }
    
    stages {
        stage('Checkout') {
            steps {
                script {
                    checkout scm
                    env.IS_PR = env.CHANGE_ID ? 'true' : 'false'
                    env.BUILD_TYPE = env.CHANGE_ID ? 'Pull Request' : 'Push'
                    
                    // Detect if this build was triggered by a PR close event
                    // Check GitHub webhook cause for PR actions
                    def isPRCloseEvent = false
                    def prAction = null
                    
                    try {
                        // Check for GitHubPullRequestCause (for PR builds)
                        def prCause = currentBuild.rawBuild.getCause(
                            org.jenkinsci.plugins.github_branch_source.GitHubPullRequestCause
                        )
                        
                        if (prCause) {
                            prAction = prCause.action
                            echo "PR Cause detected - Action: ${prAction}"
                            
                            // Skip closed/edited PRs
                            if (prAction in ['closed', 'edited']) {
                                isPRCloseEvent = true
                                echo "‚ö†Ô∏è  Detected PR ${prAction} event - CI will be skipped"
                            }
                        } else {
                            // For branch builds, check all causes to see if triggered by PR close
                            def causes = currentBuild.rawBuild.getCauses()
                            for (def cause : causes) {
                                def causeClass = cause.getClass().getSimpleName()
                                echo "Build cause: ${causeClass}"
                                
                                if (causeClass == 'GitHubPullRequestCause') {
                                    prAction = cause.action
                                    echo "PR Cause found in branch build - Action: ${prAction}"
                                    if (prAction in ['closed', 'edited']) {
                                        isPRCloseEvent = true
                                        echo "‚ö†Ô∏è  Branch build triggered by PR ${prAction} event - CI will be skipped"
                                        break
                                    }
                                }
                            }
                            
                            // Also check build description for PR close indicators (but not merge)
                            def buildDescription = currentBuild.description ?: ''
                            def isMainBranch = env.BRANCH_NAME == 'main' || env.BRANCH_NAME == 'master'
                            
                            // Only skip if it's explicitly a PR close (not merge) on non-main branches
                            if (buildDescription.contains('Pull request') && 
                                buildDescription.contains('closed') && 
                                !buildDescription.contains('merged') &&
                                !isMainBranch) {
                                isPRCloseEvent = true
                                echo "‚ö†Ô∏è  Build description indicates PR close event (not merge) - CI will be skipped"
                            }
                        }
                    } catch (Exception e) {
                        echo "Could not check PR cause: ${e.message}"
                        echo "Stack trace: ${e.getStackTrace().take(5).join('\n')}"
                        
                        // Fallback: check commit message, but only skip on non-main branches
                        def isMainBranch = env.BRANCH_NAME == 'main' || env.BRANCH_NAME == 'master'
                        if (!isMainBranch) {
                            def commitMsg = sh(
                                script: 'git log -1 --pretty=%B',
                                returnStdout: true
                            ).trim()
                            
                            if (commitMsg) {
                                // Only skip if it's a close (not merge) pattern
                                def closePattern = ~/(?i)(close|closed)\s+#\d+/
                                if (commitMsg =~ closePattern && !commitMsg.matches(/(?i).*merge.*pull.*request.*/)) {
                                    isPRCloseEvent = true
                                    echo "‚ö†Ô∏è  Detected PR close commit (not merge) - CI will be skipped"
                                }
                            }
                        }
                    }
                    
                    env.IS_PR_CLOSE_EVENT = isPRCloseEvent ? 'true' : 'false'
                    
                    // Only skip PR close events on non-main branches
                    // When PR is merged to main, it's a push event to main and should run CI
                    def isMainBranch = env.BRANCH_NAME == 'main' || env.BRANCH_NAME == 'master'
                    
                    // If PR close event detected on non-main branch, stop the build immediately
                    if (isPRCloseEvent && !isMainBranch) {
                        echo 'üö´ PR CLOSE EVENT DETECTED - STOPPING BUILD'
                        echo '================================'
                        echo "Branch: ${env.BRANCH_NAME}"
                        if (prAction) {
                            echo "PR Action: ${prAction}"
                        }
                        echo "This build was triggered by a PR close event on a non-main branch."
                        echo "Skipping pipeline execution to prevent unnecessary CI runs."
                        echo "Note: PR merges to main/master will run CI normally."
                        echo '================================'
                        currentBuild.result = 'NOT_BUILT'
                        error("Build skipped: PR close event detected on non-main branch")
                    } else if (isPRCloseEvent && isMainBranch) {
                        echo '‚ÑπÔ∏è  PR merge detected on main branch - CI will run normally'
                        echo "Branch: ${env.BRANCH_NAME}"
                        if (prAction) {
                            echo "PR Action: ${prAction}"
                        }
                        // Reset the flag so CI stages can run
                        env.IS_PR_CLOSE_EVENT = 'false'
                    }
                    
                    echo 'üì• Checking out source code...'
                    echo "Build Type: ${env.BUILD_TYPE}"
                    if (env.CHANGE_ID) {
                        echo "PR Number: ${env.CHANGE_ID}"
                        echo "Source Branch: ${env.BRANCH_NAME}"
                        echo "Target Branch: ${env.CHANGE_TARGET}"
                        if (prAction) {
                            echo "PR Action: ${prAction}"
                        }
                    } else {
                        echo "Branch: ${env.BRANCH_NAME}"
                    }
                }
            }
        }
        
        stage('Build') {
            steps {
                container('maven') {
                    echo 'üî® Building application...'
                    sh 'mvn --version'
                    sh 'mvn clean compile'
                }
            }
        }
        
        stage('Validation') {
            parallel {
                stage('Test') {
                    steps {
                        container('maven') {
                            echo 'üß™ Running tests...'
                            sh 'mvn test'
                        }
                    }
                    post {
                        always {
                            junit 'target/surefire-reports/*.xml'
                        }
                    }
                }
                
                stage('Package') {
                    steps {
                        container('maven') {
                            echo 'üì¶ Packaging application...'
                            sh 'mvn package -DskipTests'
                        }
                    }
                }
            }
        }
        
        stage('Build & Push Docker Image') {
            when {
                allOf {
                    expression { return env.CHANGE_ID == null }
                    anyOf {
                        branch 'main'
                        branch 'master'
                        branch 'develop'
                    }
                }
            }
            steps {
                container('kaniko') {
                    echo "üê≥ Building and pushing image with Kaniko..."
                    echo "Image: ${FULL_IMAGE}"
                    sh """
                        /kaniko/executor \
                            --context=\${WORKSPACE} \
                            --dockerfile=\${WORKSPACE}/Dockerfile \
                            --destination=${FULL_IMAGE} \
                            --destination=${IMAGE_REPO}/${IMAGE_NAME}:latest \
                            --cache=true \
                            --cache-ttl=24h
                    """
                }
            }
        }
        
        stage('Deploy to Kubernetes') {
            when {
                allOf {
                    expression { return env.CHANGE_ID == null }
                    anyOf {
                        branch 'main'
                        branch 'master'
                        branch 'develop'
                    }
                }
            }
            steps {
                container('kubectl') {
                    echo "üöÄ Deploying to Kubernetes..."
                    echo "Using image: ${FULL_IMAGE}"
                    script {
                        def deploymentYaml = readFile('k8s-deployment.yaml')
                        deploymentYaml = deploymentYaml.replace('IMAGE_URL_PLACEHOLDER', env.FULL_IMAGE)
                        writeFile file: 'k8s-deployment-updated.yaml', text: deploymentYaml
                    }
                    sh """
                        kubectl apply -f k8s-deployment-updated.yaml
                        
                        kubectl rollout status deployment/my-java-app -n default --timeout=5m
                        
                        echo "===== Deployment Status ====="
                        kubectl get deployment my-java-app -n default
                        kubectl get pods -l app=my-java-app -n default
                        kubectl get svc my-java-app -n default
                        kubectl get ingress my-java-app -n default
                    """
                }
            }
        }
    }
    
    post {
        success {
            script {
                if (env.CHANGE_ID) {
                    echo '‚úÖ PULL REQUEST VALIDATION SUCCESSFUL!'
                    echo '================================'
                    echo "PR Number: ${env.CHANGE_ID}"
                    echo "Validation completed successfully"
                    echo "CI pipeline (Docker build & Deploy) will run after PR merge"
                    echo '================================'
                } else {
                    script {
                        def isDeployableBranch = env.BRANCH_NAME == 'main' || env.BRANCH_NAME == 'master' || env.BRANCH_NAME == 'develop'
                        
                        if (isDeployableBranch) {
                            echo '‚úÖ VALIDATION & CI PIPELINE SUCCESSFUL!'
                            echo '================================'
                            echo "Branch: ${env.BRANCH_NAME}"
                            echo "Validation passed - CI pipeline completed"
                            echo "Image: ${FULL_IMAGE}"
                            echo "Application URL: https://${APP_DOMAIN}"
                            echo '================================'
                        } else {
                            echo '‚úÖ VALIDATION SUCCESSFUL!'
                            echo '================================'
                            echo "Branch: ${env.BRANCH_NAME}"
                            echo "Validation completed successfully"
                            echo "CI pipeline (Docker build & Deploy) skipped for this branch"
                            echo '================================'
                        }
                    }
                }
            }
        }
        failure {
            script {
                if (env.CHANGE_ID) {
                    echo '‚ùå PULL REQUEST VALIDATION FAILED!'
                    echo "PR Number: ${env.CHANGE_ID}"
                    echo "Validation failed - CI pipeline will not run"
                } else {
                    script {
                        def validationFailed = currentBuild.result == 'FAILURE'
                        if (validationFailed && currentBuild.stageName?.contains('Validation')) {
                            echo '‚ùå VALIDATION FAILED!'
                            echo "Branch: ${env.BRANCH_NAME}"
                            echo "Validation failed - CI pipeline was not executed"
                        } else {
                            echo '‚ùå CI PIPELINE FAILED!'
                            echo "Branch: ${env.BRANCH_NAME}"
                            echo "Validation passed but CI pipeline (Docker build or Deploy) failed"
                        }
                    }
                }
            }
        }
        always {
            echo 'üßπ Pipeline finished'
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
        }
    }
}
