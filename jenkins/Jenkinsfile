// ============================================================================
// STEP 1: Load groovy files (TEST ONLY - not using functions yet)
// ============================================================================
// Loading groovy files to verify they can be loaded without breaking pipeline
// Functions are NOT called yet - this is just a test of file loading
// ============================================================================

pipeline {
    agent {
        kubernetes {
            yaml '''
apiVersion: v1
kind: Pod
metadata:
  labels:
    jenkins: agent
spec:
  serviceAccountName: jenkins
  containers:
  - name: maven
    image: maven:3.9.9-eclipse-temurin-21
    command:
    - cat
    tty: true
    resources:
      requests:
        memory: "1Gi"
        cpu: "500m"
      limits:
        memory: "2Gi"
        cpu: "1000m"
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    command:
    - /busybox/cat
    tty: true
    volumeMounts:
    - name: kaniko-secret
      mountPath: /secret
    env:
    - name: GOOGLE_APPLICATION_CREDENTIALS
      value: /secret/kaniko-sa-key.json
  - name: kubectl
    image: beli/kubectl-shell:latest
    command:
    - cat
    tty: true
  volumes:
  - name: kaniko-secret
    secret:
      secretName: kaniko-secret
'''
        }
    }
    
    environment {
        GCP_PROJECT = 'shared-services-445608'
        GCP_REGION = 'us-central1'
        IMAGE_REPO = "${GCP_REGION}-docker.pkg.dev/${GCP_PROJECT}/my-java-app"
        IMAGE_NAME = 'my-app'
        IMAGE_TAG = "${BUILD_NUMBER}"
        FULL_IMAGE = "${IMAGE_REPO}/${IMAGE_NAME}:${IMAGE_TAG}"
        APP_DOMAIN = 'app.ducttdevops.com'
    }
    
    stages {
        // NOTE: When using groovy functions, checkout is handled INSIDE each function
        // - unitTestAndCodeCoverage() has stage("Checkout source code")
        // - sonarQubeScan() has stage("Checkout Source Code")
        // - buildService() has stage("Checkout Source Code")
        // So when migrating to groovy functions, this stage should be REMOVED, not replaced
        
        stage('Checkout') {
            steps {
                echo 'üì• Checking out source code...'
                checkout scm
            }
        }
        
        // STEP 1: Test loading groovy files (SAFEST FIRST STEP)
        // This stage only loads the files - doesn't use them yet
        stage('Test Groovy File Loading') {
            steps {
                script {
                    echo 'üìö STEP 1: Loading groovy files to verify they can be loaded...'
                    try {
                        // Load groovy library files
                        def jenkinsfile_CI = load 'setup/cicd/jenkinsfile_CI.groovy'
                        def jenkinsfile_utils = load 'setup/cicd/jenkinsfile_utils.groovy'
                        def jenkinsfile_CD = load 'setup/cicd/jenkinsfile_CD.groovy'
                        
                        echo '‚úÖ SUCCESS: All groovy files loaded successfully!'
                        echo "   - jenkinsfile_CI loaded with functions: ${jenkinsfile_CI.keySet()}"
                        echo "   - jenkinsfile_utils loaded with functions: ${jenkinsfile_utils.keySet()}"
                        echo "   - jenkinsfile_CD loaded with functions: ${jenkinsfile_CD.keySet()}"
                        echo ''
                        echo '‚ÑπÔ∏è  NOTE: Files are loaded but NOT used yet.'
                        echo '   Pipeline continues with existing stages below.'
                        echo '   Next step: Start using these functions gradually.'
                        
                    } catch (Exception e) {
                        echo "‚ùå ERROR: Failed to load groovy files: ${e.message}"
                        echo "   Stack trace: ${e.printStackTrace()}"
                        throw e
                    }
                }
            }
        }
        
        stage('Build with Maven') {
            steps {
                container('maven') {
                    echo 'üî® Building application...'
                    sh 'mvn --version'
                    sh 'mvn clean compile'
                }
            }
        }
        
        stage('Test') {
            steps {
                container('maven') {
                    echo 'üß™ Running tests...'
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        
        /* TODO: Replace Test + Package stages with groovy unitTestAndCodeCoverage() function
                 NOTE: This function INCLUDES its own checkout stage, so remove the Checkout stage above
        stage('Unit Test & Code Coverage') {
            steps {
                script {
                    // This function handles: Checkout + Test + Code Coverage
                    // Remove 'Checkout' and 'Test' stages above when uncommenting this
                    jenkinsfile_CI.unitTestAndCodeCoverage("PUSH")
                }
            }
        }
        */
        
        stage('Package') {
            steps {
                container('maven') {
                    echo 'üì¶ Packaging application...'
                    sh 'mvn package -DskipTests'
                }
            }
        }
        
        /* TODO: Replace Package stage with groovy buildService() function when ready
                 NOTE: This function INCLUDES its own checkout stage
        stage('Build Service') {
            steps {
                script {
                    // This function handles: Checkout + Build
                    // Remove 'Checkout' and 'Package' stages above when uncommenting this
                    jenkinsfile_CI.buildService("PUSH")
                }
            }
        }
        */
        
        stage('Build & Push Docker Image') {
            steps {
                container('kaniko') {
                    echo "üê≥ Building and pushing image with Kaniko..."
                    echo "Image: ${FULL_IMAGE}"
                    sh """
                        /kaniko/executor \
                            --context=\${WORKSPACE} \
                            --dockerfile=\${WORKSPACE}/Dockerfile \
                            --destination=${FULL_IMAGE} \
                            --destination=${IMAGE_REPO}/${IMAGE_NAME}:latest \
                            --cache=true \
                            --cache-ttl=24h
                    """
                }
            }
        }
        
        /* TODO: Replace with groovy pushImageDocker() function when ready
        stage('Push Image To Harbor') {
            steps {
                script {
                    // Use groovy function
                    // jenkinsfile_CI.pushImageDocker()
                }
            }
        }
        */
        
        stage('Deploy to Kubernetes') {
            steps {
                container('kubectl') {
                    echo "üöÄ Deploying to Kubernetes..."
                    echo "Using image: ${FULL_IMAGE}"
                    script {
                        // Read and update the deployment YAML
                        def deploymentYaml = readFile('k8s-deployment.yaml')
                        deploymentYaml = deploymentYaml.replace('IMAGE_URL_PLACEHOLDER', env.FULL_IMAGE)
                        writeFile file: 'k8s-deployment-updated.yaml', text: deploymentYaml
                    }
                    sh """
                        # Apply manifests
                        kubectl apply -f k8s-deployment-updated.yaml
                        
                        # Wait for rollout
                        kubectl rollout status deployment/my-java-app -n default --timeout=5m
                        
                        # Show deployment info
                        echo "===== Deployment Status ====="
                        kubectl get deployment my-java-app -n default
                        kubectl get pods -l app=my-java-app -n default
                        kubectl get svc my-java-app -n default
                        kubectl get ingress my-java-app -n default
                    """
                }
            }
        }
        
        /* TODO: Replace with groovy release2k8s() function when ready
        stage('Deploy to K8s') {
            steps {
                script {
                    // Use groovy function
                    // jenkinsfile_CI.release2k8s("k8s-test-performance", "patient", "telecare-k8s-config")
                }
            }
        }
        */
        
        /* TODO: Add SonarQube scan when ready
                 NOTE: This function INCLUDES its own checkout stage
        stage('SonarQube Scan') {
            steps {
                script {
                    // This function handles: Checkout + SonarQube Scan + Quality Gate
                    // Remove 'Checkout' stage above when uncommenting this (unless using parallel)
                    jenkinsfile_CI.sonarQubeScan("PUSH")
                }
            }
        }
        */
        
        /* TODO: Add security scan when ready
        stage('Security Scan') {
            steps {
                script {
                    // Use groovy function
                    // jenkinsfile_CI.acunetixScan("${env.STAGING_IP}:${env.STAGING_PORT}")
                }
            }
        }
        */
    }
    
    post {
        success {
            echo '‚úÖ BUILD & DEPLOYMENT SUCCESSFUL!'
            echo '================================'
            echo "Image: ${FULL_IMAGE}"
            echo "Application URL: https://${APP_DOMAIN}"
            echo '================================'
        }
        failure {
            echo '‚ùå BUILD OR DEPLOYMENT FAILED!'
        }
        always {
            echo 'üßπ Pipeline finished'
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
        }
    }
}

